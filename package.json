{
  "name": "@ergou_rrrr/eslint-config",
  "type": "module",
  "version": "1.1.1",
  "packageManager": "pnpm@10.17.1",
  "description": "Ray's ESLint config",
  "author": {
    "name": "Ray",
    "email": "rayguo.rf@gmail.com",
    "url": "https://github.com/RayGuo-ergou"
  },
  "license": "MIT",
  "homepage": "https://github.com/RayGuo-ergou/eslint-config",
  "keywords": [
    "eslint-config"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --clean --dts",
    "build:inspector": "pnpm build && npx @eslint/config-inspector build",
    "dev": "tsup src/index.ts --format esm,cjs --watch & npx @eslint/config-inspector",
    "stub": "tsup src/index.ts --format esm",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prepack": "nr build",
    "release": "bumpp && pnpm publish",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "peerDependencies": {
    "eslint": ">=9.0.0"
  },
  "dependencies": {
    "@antfu/eslint-config": "^5.4.1"
  },
  "devDependencies": {
    "@antfu/ni": "^26.0.1",
    "@ergou_rrrr/eslint-config": "workspace:*",
    "@eslint/config-inspector": "^1.3.0",
    "@types/node": "^24.5.2",
    "bumpp": "^10.2.3",
    "eslint": "^9.36.0",
    "eslint-flat-config-utils": "^2.1.4",
    "jiti": "^2.6.0",
    "lint-staged": "^16.2.0",
    "simple-git-hooks": "^2.13.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
